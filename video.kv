	ScrollView:
		size: self.size
		do_scroll_y: True
		do_scroll_x: False
		bar_width: '8dp'
		BoxLayout:
			size_hint_y: None
			orientation: 'vertical'
			padding: 0, 1, 0, 0
			height: upper_padding.height + gl_content.height + 1
			BsPadding:
				id: upper_padding
				size_hint_y: None
